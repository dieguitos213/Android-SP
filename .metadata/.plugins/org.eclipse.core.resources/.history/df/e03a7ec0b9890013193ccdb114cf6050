package com.ug.telescopio;

import android.app.Activity;
import android.os.Bundle;
import android.view.Menu;
import android.widget.Button;

public class MainActivity extends Activity {
	
	Button btnSearch;
	Button btnOpenActivity; //Variables Globales que representan a los botones.

    @Override//ciclo de Vida.
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);//ancestro.
        setContentView(R.layout.activity_main);//layout activity main.
        btnSearch = (Button) findViewById(R.id.btnSearch);
        btnOpenActivity = (Button) findViewById(R.id.btnOpenActivity);
    }


    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.main, menu);
        return true;
    }
    
}
